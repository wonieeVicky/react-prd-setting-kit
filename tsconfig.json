{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "Containers/*": ["src/ts/containers/*"],
      "Components/*": ["src/ts/components/*"],
      "Actions/*": ["src/ts/actions/*"],
      "Constants/*": ["src/ts/constants/*"],
      "Hoc/*": ["src/ts/hoc/*"],
      "Hooks/*": ["src/ts/hooks/*"],
      "Pages/*": ["src/ts/pages/*"],
      "Styles/*": ["src/ts/styles/*"],
      "Utils/*": ["src/ts/utils/*"],
      "Translations/*": ["src/ts/translations/*"],
      "Img/*": ["src/img/*"],
      "Css/*": ["src/css/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "Node",
      "target": "es5",
      "esModuleInterop": true,
      "typeRoots": ["./src/types"] // "./node_modules/@types"
    }
  }
}
